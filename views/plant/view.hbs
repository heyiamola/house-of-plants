<div class="plant-body">
  <header class="plant-header">
    <h1 class="underline">{{foundPlant.commonName}}</h1>
    {{#if foundPlant.botanicalName}}
    <h3><i>{{foundPlant.botanicalName}}</i></h3>
    {{/if}}
  </header>
  <div class="plant-main-container">
    <div class="plant-view-left">
      <img src="{{foundPlant.picture}}" alt="Picture of {{foundPlant.commonName}}" class="plant-view-image">
      <div class="plant-labels">
        <span class="label-{{foundPlant.availability}}">{{foundPlant.availability}}</span>
        <span class="label-giveaway">{{foundPlant.giveawayOrExchange}}</span>
      </div>
      <div class="pd-plant-description">
        <h2>Description</h2>
        <p>{{foundPlant.description}}</p>
      </div>
    </div>


    <div class="pd-plant-growing-info">
      <h2>Growing info</h2>
      <table>
        {{#if dataAvailable.growingLight}}
        <tr>
          {{#if foundPlantLightIcon}}
          <th><img src="{{foundPlantLightIcon}}" height="40px" alt=""></th>
          {{/if}}
          <th>Light</th>
          <th>{{foundPlant.growingLight}}</th>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingWater}}
        <tr>
          {{#if foundPlantWaterIcon}}
          <th><img src="{{foundPlantWaterIcon}}" height="40px" alt=""></th>
          {{/if}}
          <th>Water</th>
          <th>{{foundPlant.growingWater}}</th>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingTemperature}}
        <tr>
          {{#if foundPlantWaterIcon}}
          <th><img src="{{foundPlantTemperatureIcon}}" height="40px" alt=""></th>
          {{/if}}
          <th>Temperature</th>
          <th>{{foundPlant.growingTemperature}}</th>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingLocation}}
        <tr>
          {{#if foundPlantLocationIcon}}
          <th><img src="{{foundPlantLocationIcon}}" height="40px" alt=""></th>
          {{/if}}
          <th>Plant location</th>
          <th>{{foundPlant.growingLocation}}</th>
        </tr>
        {{/if}}
      </table>
      <h2>Growing notes</h2>
      <p>{{foundPlant.growingNotes}}</p>
      <h2>Other info</h2>
      <p>Height: {{foundPlant.heightOrLength}} cm</p>
      <p>Pot diameter: {{foundPlant.potDiameter}} cm</p>
    </div>

    <div class="plant-view-right">
      <a href="/profile/{{foundPlant.owner.username}}">
        <div class="plant-user-info">
          <img src="{{foundPlant.owner.profilePicture}}" alt="Profile picture for user {{foundPlant.owner.username}}">
          <p>Posted by {{foundPlant.owner.username}} <br>on {{dateTimeFormatted}}</p>
        </div>
      </a>
      <br>
      <p>Location: <span class="label-borough">{{foundPlant.owner.berlinBorough}}</span></p>
      <div id='map' class="plant-view-map"></div>
    </div>
  </div>
  <div class="plant-view-buttons">
    {{#if isPlantOwner}}
    <button type="submit" class="btn-yes"><a href="/plant/{{foundPlant._id}}/edit">Edit plant</a></button>
    {{else}}
    <button type="submit" class="btn-general"><a href="/plant/{{foundPlant._id}}/contact">Contact user</a></button>
    {{/if}}
  </div>


</div>
<script>
  const locationStr = `{{{location}}}`;
  const parsedLocationStr = JSON.parse(locationStr);
</script>
<script src="/js/map.js"></script>
<script src="/js/map-view.js"></script>