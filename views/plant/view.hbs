<div class="plant-body">
  <div>
    <h1>{{foundPlant.commonName}}</h1>
    {{#if foundPlant.botanicalName}}
    <h3>{{foundPlant.botanicalName}}</h3>
    {{/if}}
    <img src="{{foundPlant.picture}}" alt="Picture of {{foundPlant.commonName}}" class="plant-view-image">
    <span class="label-available">{{foundPlant.availability}}</span>
    <p>{{foundPlant.giveawayOrExchange}}</p>

    <div class="pd-plant-description">
      <h2>Description</h2>
      <p>{{foundPlant.description}}</p>
    </div>

    <div class="pd-plant-growing-info">
      <h2>Growing info</h2>
      <table>
        {{#if dataAvailable.growingLight}}
        <tr>
          <td>Light</td>
          <td>{{foundPlant.growingLight}}</td>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingWater}}
        <tr>
          <td>Water</td>
          <td>{{foundPlant.growingWater}}</td>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingTemperature}}
        <tr>
          <td>Temperature</td>
          <td>{{foundPlant.growingTemperature}}</td>
        </tr>
        {{/if}}
        {{#if dataAvailable.growingLocation}}
        <tr>
          <td>Plant location</td>
          <td>{{foundPlant.growingLocation}}</td>
        </tr>
        {{/if}}
      </table>
      <h3>Growing notes</h3>
      <p>{{foundPlant.growingNotes}}</p>
      <h2>Other info.</h2>
      <p>Height: {{foundPlant.heightOrLength}} cm</p>
      <p>Pot diameter: {{foundPlant.potDiameter}} cm</p>
    </div>
  </div>

  <div class="plant-view-right">
    <a href="/profile/{{foundPlant.owner.username}}">

      <div class="plant-user-info">
        <img src="{{foundPlant.owner.profilePicture}}" alt="Profile picture for user {{foundPlant.owner.username}}">
        <p>Posted by {{foundPlant.owner.username}} <br>on {{dateTimeFormatted}}</p>
      </div>
    </a>
    <p>Location: {{foundPlant.owner.berlinBorough}}</p>
    <div id='map' class="plant-view-map"></div>

    {{#if isPlantOwner}}
    <button type="submit"><a href="/plant/{{foundPlant._id}}/edit">Edit plant</a></button>
    {{else}}
    <button type="submit"><a href="/plant/{{foundPlant._id}}/contact">Contact user</a></button>
    {{/if}}
  </div>
</div>
<script>
  const locationStr = `{{{location}}}`;
  const parsedLocationStr = JSON.parse(locationStr);
</script>
<script src="/js/map.js"></script>
<script src="/js/map-view.js"></script>