<h1>{{foundPlant.commonName}}</h1>
{{#if foundPlant.botanicalName}}
<h3>{{foundPlant.botanicalName}}</h3>
{{/if}}
<h3>Location: {{foundPlant.owner.berlinBorough}}</h3>
<p>{{foundPlant.availability}}</p>
<p>{{foundPlant.giveawayOrExchange}}</p>
<p>Posted by {{foundPlant.owner.username}} on {{dateTimeFormatted}}</p>
<img src="{{foundPlant.picture}}" alt="Picture of {{foundPlant.commonName}}">

<div class="pd-plant-description">
  <h2>Description</h2>
  <p>{{foundPlant.description}}</p>
</div>

<div class="pd-plant-growing-info">
  <h2>Growing info</h2>
  {{#if dataAvailable.growingLight}}
  <p>Light: {{foundPlant.growingLight}}</p>
  {{/if}}
  {{#if dataAvailable.growingWater}}
  <p>Water: {{foundPlant.growingWater}}</p>
  {{/if}}
  {{#if dataAvailable.growingTemperature}}
  <p>Temperature: {{foundPlant.growingTemperature}}</p>
  {{/if}}
  {{#if dataAvailable.growingLocation}}
  <p>Plant location: {{foundPlant.growingLocation}}</p>
  {{/if}}
  <h3>Growing notes</h3>
  <p>{{foundPlant.growingNotes}}</p>
  <h2>Other info.</h2>
  <p>Height: {{foundPlant.heightOrLength}}</p>
  <p>Pot diameter: {{foundPlant.potDiameter}}</p>
</div>
<div id='map'></div>


{{#if isPlantOwner}}
<button type="submit"><a href="/plant/{{foundPlant._id}}/edit">Edit plant</a></button>
<button type="submit"><a href="/plant/{{foundPlant._id}}/delete">Delete plant</a></button>
{{else}}
<button type="submit">Contact user</button>
{{/if}}
<script>
  const locationStr = `{{{location}}}`;
  const parsedLocationStr = JSON.parse(locationStr);
</script>
<script src="/js/map.js"></script>
<script src="/js/map-view.js"></script>