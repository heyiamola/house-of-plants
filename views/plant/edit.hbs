<div class="add-plant-new">
  <h1>Edit the plant</h1>
  <form action="/plant/{{foundPlant._id}}/edit" method="POST" enctype="multipart/form-data">

    <div class="add-plant-section">
      <h2>Basic info.</h2>
      <label> Common name*
        <br>
        <input class="add-plant-text-input" type="text" name="commonName" value="{{foundPlant.commonName}}">
      </label>
      <label> Botanical name
        <br>
        <input class="add-plant-text-input" type="text" name="botanicalName" value="{{foundPlant.botanicalName}}">
      </label>
      <label> Description
        <br>
        <input class="add-plant-text-input" type="text" name="description" value="{{foundPlant.description}}">
      </label>
      <label> Availability
        {{#each plantAvailability}}
        <input type="radio" name="availability" id="availability" value="{{this.[0]}}" {{#if this.[1]}} checked="true"
          {{/if}}>{{this.[0]}}
        </option>
        {{/each}}
      </label>
      <label>Giveaway or exchange?
        {{#each plantGiveawayExchange}}
        <input type="radio" name="giveawayOrExchange" id="giveawayOrExchange" value="{{this.[0]}}"
          {{this.[1]}}>{{this.[0]}}</option>
        {{/each}}
      </label>
      <br>
    </div>
    <div class="add-plant-section">
      <h2>Growing conditions</h2>
      <table>
        <tr>
          <th>Light </th>
          {{#each plantGrowingLight}}
          <td>
            <label> <input type="radio" name="growingLight" id="growingLight" value="{{this.[0]}}"
                {{this.[1]}}>{{this.[0]}}
              </option>
            </label>
          </td>
          {{/each}}
        </tr>
        <tr>
          <th>Water </th>
          {{#each plantGrowingWater}}
          <td>
            <label>
              <input type="radio" name="growingWater" id="growingWater" value="{{this.[0]}}" {{this.[1]}}>{{this.[0]}}
              </option>
            </label>
          </td>
          {{/each}}
        </tr>
        <tr>
          <th>Temperature </th>
          {{#each plantGrowingTemperature}}
          <td>
            <label>
              <input type="radio" name="growingTemperature" id="growingTemperature" value="{{this.[0]}}"
                {{this.[1]}}>{{this.[0]}}</option>
            </label>
          </td>
          {{/each}}
        </tr>
        <tr>
          <th>Plant location </th>
          {{#each plantGrowingLocation}}
          <td>
            <label>
              <input type="radio" name="growingLocation" id="growingLocation" value="{{this.[0]}}"
                {{this.[1]}}>{{this.[0]}}
              </option>
            </label>
          </td>
          {{/each}}
        </tr>
      </table>

      <label for="growingNotes"> Growing notes
        <br>
        <input class="add-plant-text-input" type="text" name="growingNotes" id="growingNotes"
          value="{{foundPlant.growingNotes}}">
      </label>
    </div>


    <div class="add-plant-section">
      <h2>Other info.</h2 <br>
      <label> Height
        <input class="add-plant-number-input" type="text" name="heightOrLength" value={{foundPlant.heightOrLength}}> cm
      </label>
      <br>
      <label> Pot diameter
        <input class="add-plant-number-input" type="text" name="potDiameter" value={{foundPlant.potDiameter}}> cm
      </label>
      <br>
    </div>

    <div class="add-plant-section">
      <h2>Upload images</h2>
      <img class="plant-image" src="{{foundPlant.picture}}" alt="Plant image">
      <p>Add more images:</p>
      <input class="add-plant-text-input" type="file" name="plant-image">
      <button type="submit" class="add-plant-button">Save plant</button> <a href="/plant/{{foundPlant._id}}/delete"
        class="btn-no">Delete
        plant</a>
    </div>


  </form>
</div>