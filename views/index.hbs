<div class="fd-body">
  <header class="fd-search-container">
    <div class="fd-search-content">
      <h1>House of plants</h1>
      <h2>Swap plants, seedlings and more. Create your own urban jungle.</h2>
      <div class="fd-buttons">
        <button><a href="/search/plant">Search plants</a>
        </button>
        {{!-- <button><a href="/search/event">Search events</a>
        </button> --}}
      </div>
    </div>
  </header>
  <section class="fd-plants-container">
    {{#if isAnonymousUser}}
    <header class="vertical-with-mobile">
      <h2>Plants for grabs in <span class="underline">Berlin</span></h2>
      <a href="/search/plant" class="btn-general">See all plants in Berlin</a>
    </header>
    {{else}}
    <header class="vertical-with-mobile">
      <h2>Plants for grabs in <span class="underline">{{userLocation}}</span></h2>
      <a href="/search/plant" class="btn-general">See all plants in {{userLocation}}</a>
    </header>
    {{/if}}
    <p>Check plants available in your area</p>
    <div class="fd-cards-container">
      {{#each plantsInTheArea}}
      <div class="fd-card-plant">
        <a href="/plant/view/{{_id}}"><img src="{{picture}}" alt="Photo of {{commonName}}"></a>
        <h3>{{commonName}}</h3>
        <p class="label-{{availability}}">{{availability}}</p>
      </div>
      {{/each}}
    </div>
  </section>
  {{#unless isAnonymousUser}}
  <section class="newsletter-signup">
    <div class="newsletter-box">
      <h2 class="underline">Join our newsletter</h2>
      <p>Every week, we'll be sending you best tips on plant care and news from our community. No spam, we promise!</p>
      <input type="email" name="newsletter-email" id="newsletter-email">
      <button type="submit" class="btn-general"><a href="/newsletter">Sign me up</a></button>
    </div>
  </section>
